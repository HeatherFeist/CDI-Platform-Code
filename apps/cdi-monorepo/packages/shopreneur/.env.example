# ================================
# SHOP'RENEUR ENVIRONMENT VARIABLES
# ================================
# Copy this to .env.local for development
# Copy this to .env.production for production

# ----------------
# Firebase Config
# ----------------
# Get these from Firebase Console → Project Settings → General
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# ----------------
# Supabase (Legacy - Optional)
# ----------------
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ----------------
# API Configuration
# ----------------
# Development: http://localhost:3001
# Production: https://your-api.railway.app
VITE_API_URL=http://localhost:3001

# ----------------
# Facebook OAuth
# ----------------
# Get from https://developers.facebook.com/apps
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here

# ----------------
# Stripe Payments
# ----------------
# Test keys (development): pk_test_...
# Live keys (production): pk_live_...
# Get from https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ----------------
# Google Gemini AI (Optional)
# ----------------
VITE_GEMINI_API_KEY=your-gemini-api-key

# ----------------
# Marketplace Integration (Optional)
# ----------------
# If your Marketplace uses a different Supabase project, add these:
# Otherwise, it will use the Shop'reneur Supabase credentials above
VITE_MARKETPLACE_SUPABASE_URL=https://your-marketplace-project.supabase.co
VITE_MARKETPLACE_SUPABASE_ANON_KEY=your-marketplace-anon-key-here

# ================================
# QUICK SETUP
# ================================
# 1. Copy: cp .env.example .env.local
# 2. Fill in Firebase credentials (required)
# 3. For local dev: keep localhost URLs
# 4. For production: create .env.production with live URLs and keys

