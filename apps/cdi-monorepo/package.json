{
  "name": "constructive-designs-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Constructive Designs Inc. nonprofit ecosystem",
  "workspaces": [
    "packages/renovision",
    "packages/marketplace",
    "packages/quantum-wallet",
    "packages/image-editor"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "renovision:dev": "npm run dev --workspace=packages/renovision",
    "renovision:build": "npm run build --workspace=packages/renovision",
    "renovision:deploy": "npm run deploy --workspace=packages/renovision",
    "marketplace:dev": "npm run dev --workspace=packages/marketplace",
    "marketplace:build": "npm run build --workspace=packages/marketplace",
    "marketplace:deploy": "npm run deploy --workspace=packages/marketplace",
    "wallet:dev": "npm run dev --workspace=packages/quantum-wallet",
    "wallet:build": "npm run build --workspace=packages/quantum-wallet",
    "wallet:deploy": "npm run deploy --workspace=packages/quantum-wallet",
    "image-editor:dev": "npm run dev --workspace=packages/image-editor",
    "image-editor:build": "npm run build --workspace=packages/image-editor",
    "image-editor:deploy": "npm run deploy --workspace=packages/image-editor",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Constructive-Designs-Inc/Constructive-Home-Reno-Designs-Inc.git"
  },
  "keywords": [
    "nonprofit",
    "construction",
    "marketplace",
    "wallet",
    "monorepo"
  ],
  "author": "Constructive Designs Inc.",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
